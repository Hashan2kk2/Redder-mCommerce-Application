<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_product_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/my_prod_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/custom_input_rounded"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/macbook"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/my_prod_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/my_prod_img"
            android:layout_marginStart="20dp"
            android:textSize="15dp"
            android:fontFamily="@font/gotham_bold"
            app:layout_constraintStart_toEndOf="@+id/my_prod_img"
            android:text="Product Name"/>

        <TextView
            android:id="@+id/my_prod_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/my_prod_img"
            app:layout_constraintTop_toBottomOf="@+id/my_prod_name"
            android:layout_marginStart="20dp"
            android:text="Mac Book"/>

        <TextView
            android:id="@+id/my_prod_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/my_prod_img"
            app:layout_constraintTop_toBottomOf="@+id/my_prod_brand"
            android:layout_marginStart="20dp"
            android:text="Lap Top"/>


        <TextView
            android:id="@+id/my_prod_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/my_prod_img"
            app:layout_constraintStart_toEndOf="@id/my_prod_img"
            android:textSize="18dp"
            android:textColor="@color/textColor"
            android:layout_marginStart="20dp"
            android:text="Rs.2000.00"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/my_prod_img"
            app:layout_constraintBottom_toBottomOf="@+id/my_prod_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:text="View Product"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>